generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  folders   Folder[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Folder {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  name   String
  userId Int
  files  File[]
}

model File {
  id           Int      @id @default(autoincrement())
  Folder       Folder   @relation(fields: [folderId], references: [id])
  folderId     Int
  filename     String
  originalName String
  path         String
  mimeType     String?
  sizeBytes    Int?
  url          String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
